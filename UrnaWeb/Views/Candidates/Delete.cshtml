@model UrnaWeb.Models.Candidate

@{
    ViewData["Title"] = "Delete";
}

<h2>Deletar</h2>

<h3>Tem certeza que deseja excluir este candidato?</h3>
<div>
    <h4>Candidate</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt>
            Vice Presidente
        </dt>
        <dd>
            @Html.DisplayFor(model => model.VicePresident)
        </dd>
        <dt>
            Data de registro
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DateRegister)
        </dd>
        <dt>
          Número do candidato
        </dt>
        <dd>
            @Html.DisplayFor(model => model.subtitle)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
